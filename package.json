{
  "name": "regional-news-backend",
  "version": "1.0.0",
  "description": "Backend for the Regional News Aggregator focused on Lewiston, providing APIs for user management, content aggregation, and real-time updates.",
  "main": "app/main.py",
  "scripts": {
    "start": "uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "dev": "uvicorn app.main:app --reload",
    "lint": "flake8 app",
    "test": "pytest tests/",
    "build": "docker build -t regional-news-backend .",
    "deploy": "docker-compose up -d"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "eslint": "^8.27.0"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "keywords": ["backend", "fastapi", "news", "aggregation", "api"],
  "author": "Your Team",
  "license": "MIT"
}

